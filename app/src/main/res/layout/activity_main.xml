<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        tools:context=".MainActivity">

        <!--    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->


        <com.example.danpolpad2.ScrollWebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="550dp" />

        <com.example.danpolpad2.ScrollWebView
            android:id="@+id/webview2"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@id/webview"
            android:visibility="gone"
            />


        <TextView
            android:id="@+id/JsoupTxtMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/webview2"
            android:text="JsoupTxtMain"
            android:visibility="gone"
            android:scrollbars = "vertical"
            android:maxLines="30"

            />

        <TextView
            android:id="@+id/JsoupTxt"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_below="@+id/JsoupTxtMain"
            android:visibility="gone"
            android:text="JsoupTxt" />
        <!--    android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true" -->


        <Button
            android:id="@+id/Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/JsoupTxt"
            >
        </Button>



        <EditText
            android:id="@+id/Notepad"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:lines="6"
            android:minLines="6"
            android:gravity="top|start"
            android:maxLines="6"
            android:singleLine="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Switch"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="Hi"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Notepad"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="Save Note"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/TranslateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translate"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btnSave"
            >
        </Button>


        <Button
            android:id="@+id/LoadSavedStateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Saved State"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/TranslateBtn"
            android:visibility="gone"
            >
        </Button>


        <Button
            android:id="@+id/PolPadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoadSavedStateBtn"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="PolPad"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/ExperiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/PolPadBtn"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="Webscrape" />




        <View
            android:id="@+id/HorizontalLine"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:background="#E91E63"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ExperiBtn"
            />
        <Button
            android:id="@+id/msnpolska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HorizontalLine"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="msnpolska" />


        <Button
            android:id="@+id/redditpolska"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msnpolska"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="redditpolska" />

        <Button
            android:id="@+id/businessinsidercompl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/redditpolska"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="businessinsider.com.pl" />

        <Button
            android:id="@+id/wikipl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/businessinsidercompl"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="wikipl" />

        <Button
            android:id="@+id/Wprost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wikipl"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="Wprost" />


        <View
            android:id="@+id/HorizontalLineLang"
            android:layout_width="320dp"
            android:layout_height="2dp"
            android:background="#9a9a9c"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/Wprost"
            />
        <Button
            android:id="@+id/elmundo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HorizontalLineLang"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="elmundo" />


        <Button
            android:id="@+id/wikies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/elmundo"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="wikies" />


        <Button
            android:id="@+id/btnGoToWebscrape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wikies"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:text="btnGoToWebscrape"
            android:visibility="gone"
            />
    </RelativeLayout>
</ScrollView>